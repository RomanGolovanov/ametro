<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="3" android:versionName="1.0.2"
    package="org.ametro" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:debuggable="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name" android:name="org.ametro.ApplicationEx">
        <activity android:label="@string/app_name"
            android:launchMode="singleTop"
            android:name=".activity.MapViewActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data android:name="android.app.default_searchable" android:value=".activity.StationSearchActivity"/>
        </activity>
        <activity android:name=".activity.MediaUnmountedActivity"/>
        <activity android:name=".activity.MapDetailsActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".activity.RouteViewActivity"/>
        <activity android:launchMode="singleTop"
            android:name=".activity.RouteCreateActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.DonateActivity"/>
        <activity android:name=".activity.SettingsActivity"/>
        <activity android:name=".activity.StationViewActivity"/>
        <activity android:name=".activity.StationListActivity"/>
        <activity android:name=".activity.FavoriteRouteListActivity"/>
        <activity android:name=".activity.CatalogTabHostActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustPan"/>
        <activity android:label="@string/title_catalog_local"
            android:name=".activity.CatalogLocalListActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustPan"/>
        <activity android:label="@string/title_catalog_online"
            android:name=".activity.CatalogOnlineListActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustPan"/>
        <activity android:label="@string/title_catalog_import"
            android:name=".activity.CatalogImportListActivity"
            android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.CatalogMapSelectionActivity"/>
        <activity android:name=".activity.TaskQueuedList"/>
        <activity android:name=".activity.TaskFailedList"/>
        <!-- DIALOGS -->
        <activity android:label="@string/msg_donate_title"
            android:name=".dialog.PaymentDetailsDialog" android:theme="@android:style/Theme.Dialog"/>
        <activity 
            android:label="@string/msg_detect_location"
            android:name=".dialog.LocationSearchDialog" android:theme="@android:style/Theme.Dialog"/>
        <!-- SEARCHS -->
        <activity android:label="@string/search_station"
            android:launchMode="singleTop" android:name=".activity.StationSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <!-- THIRD PARTY ACTIVITIES -->
        <!--
			<activity android:name="com.paypal.android.MEP.PayPalActivity"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
		-->
        <!-- SERVICES -->
        <service android:name="org.ametro.service.AutoUpdateService"/>
        <!-- RECEIVERS -->
        <receiver android:name="org.ametro.receiver.AutoUpdateReceiver">
            <intent-filter>
                <!-- <action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED" /> -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <service android:name="org.ametro.service.CatalogTaskQueueService"/>
    </application>
    <uses-sdk android:minSdkVersion="3"/>
    <uses-permission android:name="android.permission.ACCESS_GPS"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
